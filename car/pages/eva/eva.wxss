/* pages/eva/eva.wxss */
page{
  background: #f5f5f5;
}
.tabBox{
 width: 100%;
 display: flex;
 justify-content: center;
 background: #fff;
}
.tab-item{
  width: 50%;
  text-align: center;
  color: #C1C1C1;
  line-height: 70rpx;
  font-size: 30rpx;
}
.tab-item.active{
  color: #44D242;
}
.tab-item.active::after{
  content: "";
  display: block;
  width: 100%;
  height: 1rpx;
  background: #44D242;
}
.listBox{
  width: 100%;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.li-item{
  background: #fff;
  padding: 20rpx;
  color: #666;
}
.li-item-to{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding: 10rpx 0;
}
.li-item-time{
  color: #ccc;
}
.li-item-content{
  font-size: 26rpx;
  padding: 10rpx 0;
}
.li-nothing{
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
  line-height: 100rpx;
}