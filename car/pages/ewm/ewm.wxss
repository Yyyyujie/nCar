/* pages/ewm/ewm.wxss */
page{
  box-sizing: border-box;
  background: #f5f5f5;
}
.ewm-title{
  font-size: 26rpx;
  color: #949494;
  padding: 20rpx;
  box-sizing: border-box;
}
.ewmBox{
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
.ewm1{
  font-size: 40rpx;
  letter-spacing: 4rpx;
}
.ewmBox image{
  width:400rpx;
  height:400rpx;
  margin: 20rpx 0;
}
.ewm2{
  color: #448855;
  font-size:40rpx;
  letter-spacing:16rpx;
}
.ewm3{
  color: #929292;
  font-size: 26rpx;
}
.buy,.share{
  width: 80%;
  margin-top: 40rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  padding: 10rpx 0;
}
.buy{
  background: #44D242;
  color: #fff;
}
.share{
  background: #fff;
  color: #44D242;
}